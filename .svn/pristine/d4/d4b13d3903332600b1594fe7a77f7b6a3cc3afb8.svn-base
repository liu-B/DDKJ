$col-01994b:#01994b;

.logo {
  position: absolute;
  top: 35px;
  left: 22px;

  width: 158px;
  height: 65px;
}

.download-app {
  position: absolute;
  top: 35px;
  right: 6px;

  width: 144px;

  text-align: center;
  img {
    display: inline-block;
    width: 78px;
    height: 78px;
    margin-bottom: 13px;
  }
}

.search-wrap {
  width: 616px;
  margin: 0 0 23px 321px;
  padding-top: 46px;
}

.form {
  margin-bottom: 12px;

  border: 2px solid $col-01994b;
  input {
    width: 470px;
    height: 34px;

    border: none;
    outline: none;
  }
  .submit {
    width: 122px;
    height: 34px;

    border: 0;
    background-color: $col-01994b;
    outline: none;
    cursor: pointer;
  }
}

.hotwords {
  font-size: 0;
  a {
    font-size: 12px;

    margin-left: 16px;

    color: #999;
    &:first-child {
      margin-left: 0;
    }
  }
}

.navitems {
  margin-left: 264px;
  height: 40px;
  line-height: 40px;
  li {
    float: left;
    font-size: 16px;
    margin-left: 46px;
    position: relative;
    &:first-child {
      margin-left: 0;
    }
    a {
      color: #333;
      &:hover,&.on{
        color: $col-01994b;
      }
    }
  }
}

.ico-hot{
  width: 16px;
  height: 16px;
  background:url(../images/icons/hot.png) no-repeat;
  position: absolute;
  top: 0;
  right: -15px;

}