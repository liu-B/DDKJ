@import 'sass/top';
@import 'sass/header';

body {
  background-color: #fff;
}





/* crumb-wrap */

.crumb-wrap {
  height: 44px;
  background-color: #f2f2f2;
  border-top: 1px solid #e0e0e0;
  line-height: 44px;
  font-size: 0;
  a {
    font-size: 12px;
    color: #333;
    max-width: 145px;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    display: inline-block;
    &:before {
      content: '';
      display: inline-block;
      background: url(../images/icons/Arrow-4.png) no-repeat;
      width: 12px;
      height: 12px;
      position: relative;
      top: 2px;
      margin-left: 10px;
      margin-right: 7px;
    }
    &:first-child {
      &:before {
        display: none;
      }
    }
  }
}





/* 商品介绍 */

.product-intro {
  margin-top: 47px;
}

.preview-wrap {
  width: 460px;
  margin-right: 52px;
}

.item-info-wrap {
  width: 698px;
}

.preview-zoom {
  width: 352px;
  height: 352px;
  background-color: #eee;
}

.preview-list {
  width: 352px;
  padding: 0 29px;
  overflow: hidden;
  li {
    margin-left: 10px;
    float: left;
    width: 51px;
    height: 51px;
    overflow: hidden;
    position: relative;
    &:first-child {
      margin-left: 0;
    }
    &.on {
      &:before {
        content: '';
        display: block;
        position: absolute;
        width: 47px;
        height: 47px;
        border: 2px solid #01994b;
        top: 0;
        left: 0;
      }
    }
  }
}

h3 {
  font-size: 30px;
  color: #404040;
  margin-bottom: 22px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-news {
  font-size: 12px;
  margin-bottom: 22px;
  color: #404040;
  span {
    color: #ff6700;
  }
}

.summary-price {
  padding: 20px 12px;
  background-color: #f5f5f5;
  margin-bottom: 34px;
  dt {
    border-bottom: 1px solid #e1dddd;
    font-size: 26px;
    color: #e53935;
    padding-bottom: 14px;
    margin-bottom: 22px;
  }
  .coupon {
    margin-right: 32px;
    display: inline-block;
    width: 35px;
    text-align: justify;
    text-justify: distribute-all-lines;
    /*ie6-8*/
    text-align-last: justify;
    /* ie9*/
    -moz-text-align-last: justify;
    /*ff*/
    -webkit-text-align-last: justify;
    /*chrome 20+*/
  }
  .coupon-list {
    width: 108px;
    height: 20px;
    line-height: 20px;
    text-align: center;
    display: inline-block;
  }
}

.coupon-1 {
  background: url(../images/imgs/Coupon-1.png) no-repeat;
}

.coupon-2 {
  background: url(../images/imgs/Coupon-2.png) no-repeat;
}

.coupon-more {
  color: #404040;
  padding-right: 15px;
  background: url(../images/icons/Arrow-4.png) no-repeat right;
}

.summary-choose-wrap {
  dt {
    float: left;
    margin-right: 32px;
    font-size: 12px;
    color: #404040;
    display: inline-block;
    width: 48px;
    text-align: justify;
    text-justify: distribute-all-lines;
    /*ie6-8*/
    text-align-last: justify;
    /* ie9*/
    -moz-text-align-last: justify;
    /*ff*/
    -webkit-text-align-last: justify;
    /*chrome 20+*/
  }
  dd {
    float: left;
    display: inline-block;
    position: relative;
    span {
      display: inline-block;
    }
    .tips-zp {
      width: 30px;
      height: 16px;
      border: 1px solid #e53935;
      color: #e53935;
      font-size: 12px;
      line-height: 16px;
      text-align: center;
    }
    .zp-img {
      position: absolute;
      top: -10px;
      left: 40px;
    }
  }
}

.cut-off-rule {
  height: 1px;
  width: 100%;
  background-color: #e1dddd;
  margin-bottom: 26px;
}

.summary-gift {
  margin-bottom: 46px;
}

.summary-stock {
  margin-bottom: 34px;
}

.summary-supply {
  margin-bottom: 24px;
}

.summary-attrs,
.choose-suits,
.choose-service {
  height: 40px;
  line-height: 40px;
  dd {
    width: 145px;
    height: 38px;
    text-align: center;
    border: 1px solid #999;
    cursor: pointer;
    &.on {
      border-color: #e53935;
      font-weight: bolder;
    }
    &.off {
      border-color: #ccc;
      color: #ccc;
      cursor: no-drop;
    }
  }
}

.choose-tips {
  margin-bottom: 14px;
  dd {
    color: #e53935;
  }
}

.choose-amount {
  width: 66px;
  display: inline-block;
  margin-right: 14px;
  .choose-amount-num {
  	padding: 5px;
    width: 33px;
    height: 35px;
    border: none;
    outline: none;
    text-align: center;
  }
  .choose-amount-add,.choose-amount-reduce {
    display: block;
    width: 21px;
    height: 22px;
    text-align: center;
    line-height: 22px;
  }
}
.btn-cart{
	margin-right: 14px;
}
.btn-cart,.btn-pay{
  	display: inline-block;
  	width: 174px;
  	height: 47px;
  	line-height: 47px;
  	text-align: center;
  }