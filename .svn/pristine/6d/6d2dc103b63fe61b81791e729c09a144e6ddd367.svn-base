@charset "UTF-8";
.top { height: 32px; background-color: #f5f5f5; line-height: 32px; color: #666; }

.top li { float: left; margin-left: 20px; }

.top li:first-child { margin-left: 0; }

.top a { color: #666; }

.top .login-link { margin: 0 10px; }

.ico-arrow-d { position: relative; top: -1px; }

.ico-phone-app { position: relative; top: 4px; }

.logo { position: absolute; top: 35px; left: 22px; width: 158px; height: 65px; }

.download-app { position: absolute; top: 35px; right: 6px; width: 144px; text-align: center; }

.download-app img { display: inline-block; width: 78px; height: 78px; margin-bottom: 13px; }

.search-wrap { width: 616px; margin: 0 0 23px 321px; padding-top: 46px; }

.form { margin-bottom: 12px; border: 2px solid #01994b; }

.form input { width: 470px; height: 34px; border: none; outline: none; }

.form .submit { width: 122px; height: 34px; border: 0; background-color: #01994b; outline: none; cursor: pointer; }

.hotwords { font-size: 0; }

.hotwords a { font-size: 12px; margin-left: 16px; color: #999; }

.hotwords a:first-child { margin-left: 0; }

.navitems { margin-left: 264px; height: 40px; line-height: 40px; }

.navitems li { float: left; font-size: 16px; margin-left: 46px; position: relative; }

.navitems li:first-child { margin-left: 0; }

.navitems li a { color: #333; }

.navitems li a:hover, .navitems li a.on { color: #01994b; }

.ico-hot { width: 16px; height: 16px; background: url(../images/icons/hot.png) no-repeat; position: absolute; top: 0; right: -15px; }

body { background-color: #fff; }

/* crumb-wrap */
.crumb-wrap { height: 44px; background-color: #f2f2f2; border-top: 1px solid #e0e0e0; line-height: 44px; font-size: 0; }

.crumb-wrap a { font-size: 12px; color: #333; max-width: 145px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; display: inline-block; }

.crumb-wrap a:before { content: ''; display: inline-block; background: url(../images/icons/Arrow-4.png) no-repeat; width: 12px; height: 12px; position: relative; top: 2px; margin-left: 10px; margin-right: 7px; }

.crumb-wrap a:first-child:before { display: none; }

/* 商品介绍 */
.product-intro { margin-top: 47px; }

.preview-wrap { width: 460px; margin-right: 52px; }

.item-info-wrap { width: 698px; }

.preview-zoom { width: 352px; height: 352px; background-color: #eee; }

.preview-list { width: 352px; padding: 0 29px; overflow: hidden; }

.preview-list li { margin-left: 10px; float: left; width: 51px; height: 51px; overflow: hidden; position: relative; }

.preview-list li:first-child { margin-left: 0; }

.preview-list li.on:before { content: ''; display: block; position: absolute; width: 47px; height: 47px; border: 2px solid #01994b; top: 0; left: 0; }

h3 { font-size: 30px; color: #404040; margin-bottom: 22px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap; }

.item-news { font-size: 12px; margin-bottom: 22px; color: #404040; }

.item-news span { color: #ff6700; }

.summary-price { padding: 20px 12px; background-color: #f5f5f5; margin-bottom: 34px; }

.summary-price dt { border-bottom: 1px solid #e1dddd; font-size: 26px; color: #e53935; padding-bottom: 14px; margin-bottom: 22px; }

.summary-price .coupon { margin-right: 32px; display: inline-block; width: 35px; text-align: justify; text-justify: distribute-all-lines; /*ie6-8*/ text-align-last: justify; /* ie9*/ -moz-text-align-last: justify; /*ff*/ -webkit-text-align-last: justify; /*chrome 20+*/ }

.summary-price .coupon-list { width: 108px; height: 20px; line-height: 20px; text-align: center; display: inline-block; }

.coupon-1 { background: url(../images/imgs/Coupon-1.png) no-repeat; }

.coupon-2 { background: url(../images/imgs/Coupon-2.png) no-repeat; }

.coupon-more { color: #404040; padding-right: 15px; background: url(../images/icons/Arrow-4.png) no-repeat right; }

.summary-choose-wrap dt { float: left; margin-right: 32px; font-size: 12px; color: #404040; display: inline-block; width: 48px; text-align: justify; text-justify: distribute-all-lines; /*ie6-8*/ text-align-last: justify; /* ie9*/ -moz-text-align-last: justify; /*ff*/ -webkit-text-align-last: justify; /*chrome 20+*/ }

.summary-choose-wrap dd { float: left; display: inline-block; position: relative; }

.summary-choose-wrap dd span { display: inline-block; }

.summary-choose-wrap dd .tips-zp { width: 30px; height: 16px; border: 1px solid #e53935; color: #e53935; font-size: 12px; line-height: 16px; text-align: center; }

.summary-choose-wrap dd .zp-img { position: absolute; top: -10px; left: 40px; }

.cut-off-rule { height: 1px; width: 100%; background-color: #e1dddd; margin-bottom: 26px; }

.summary-gift { margin-bottom: 46px; }

.summary-stock { margin-bottom: 34px; }

.summary-supply { margin-bottom: 24px; }

.summary-attrs, .choose-suits, .choose-service { height: 40px; line-height: 40px; }

.summary-attrs dd, .choose-suits dd, .choose-service dd { width: 145px; height: 38px; text-align: center; border: 1px solid #999; cursor: pointer; }

.summary-attrs dd.on, .choose-suits dd.on, .choose-service dd.on { border-color: #e53935; font-weight: bolder; }

.summary-attrs dd.off, .choose-suits dd.off, .choose-service dd.off { border-color: #ccc; color: #ccc; cursor: no-drop; }

.choose-tips { margin-bottom: 14px; }

.choose-tips dd { color: #e53935; }

.choose-amount { width: 66px; display: inline-block; margin-right: 14px; }

.choose-amount .choose-amount-num { padding: 5px; width: 33px; height: 35px; border: none; outline: none; text-align: center; }

.choose-amount .choose-amount-add, .choose-amount .choose-amount-reduce { display: block; width: 21px; height: 22px; text-align: center; line-height: 22px; }

.btn-cart { margin-right: 14px; }

.btn-cart, .btn-pay { display: inline-block; width: 174px; height: 47px; line-height: 47px; text-align: center; }
