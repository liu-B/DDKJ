}












/* 用户信息 */

.user-info-wrap {
  padding: 20px 13px 22px
}












/* 用户头像 */

.user-info-avatar {
  display: inline-block;
  width: 48px;
  height: 48px;
  border-radius: 45px;
  background-color: #eee;
  overflow: hidden;
}












/* 用户信息 */

.user-info-show {
  display: inline-block;
  position: relative;
  top: -12px;
  a {
    color: #323232;
  }
  .user-login {
    margin-top: 7px;
  }
}












/* 福利&VIP */

.user-profit {
  text-align: center;
  margin-bottom: 18px;
  a {
    display: inline-block;
    width: 68px;
    height: 20px;
    border: 2px solid $col-e53935;
    line-height: 20px;
    color: $col-e53935;
  }
  .user-profit-link-1 {
    margin-right: 13px;
  }
}












/* 促销&公告 */

.D-news-tab {
  font-size: 12px;
  color: #333;
  border-bottom: 1px solid #e6e6e6;
  padding-bottom: 4px;
  span {
    cursor: pointer;
    display: inline-block;
    width: 32px;
    text-align: center;
  }
  .D-news-tab-first {
    border-right: 1px solid #e6e6e6;
    padding-right: 7px;
  }
  .D-news-tab-last {
    padding-left: 7px;
  }
  .tab-wrap {
    position: relative;
    display: inline-block;
  }
  .D-news-tab-on {
    width: 32px;
    height: 2px;
    background-color: $col-e53935;
    position: absolute;
    bottom: -5px;
    left: 0;
  }
}

.D-news-list {
  margin-top: 17px;
  li {
    margin-top: 14px;
    a {
      color: #666;
      &:hover {
        color: $col-e53935;
      }
    }
  }
}












/* 活动 */

.D-slider {
  height: 173px;
  overflow: hidden;
  li {
    float: left;
    margin-left: 10px;
    &:first-child {
      margin-left: 0;
    }
    a {
      display: inline-block;
      width: 295px;
      height: 173px;
      overflow: hidden;
      img {
        width: 100%;
        height: 100%;
      }
    }
  }
}












/* 秒杀 */

.box-hd {
  height: 67px;
  line-height: 67px;
}


.box-hd-col-2 {
  height: 67px;
  .box-hd-col-2-tip {
    position: relative;
    top: -11px;
  }
}

.time-box {
  display: inline-block;
}

.time-wrap {
  display: inline-block;
  width: 36px;
  height: 36px;
  line-height: 36px;
  background-color: #575757;
  border-radius: 4px;
  margin-top: 16px;
  text-align: center;
  span {
    font-size: 24px;
    color: #fff;
    font-family: Arial;
  }
}

.split {
  margin: 29px 8px 0 8px;
  i {
    width: 2px;
    height: 2px;
    background-color: #575757;
    display: block;
    margin-bottom: 7px;
  }
}

.box-bd {
  li {
    position: relative;
    width: 396px;
    height: 230px;
  }
}

.s-p-img {
  position: absolute;
  width: 150px;
  height: 150px;
  left: 19px;
  top: 33px;
}

.s-p-info {
  padding-left: 193px;
  padding-top: 35px;
  h4 {
    font-size: 16px;
  }
  .subhead {
    font-size: 12px;
    color: #ccc;
  }
  .price-now {
    font-family: Arial;
  }
  .surplus {
    display: inline-block;
    width: 121px;
    height: 8px;
    border: 1px solid #f2cecd;
    border-radius: 15px;
    position: relative;
    margin-right: 8px;
    strong {
      position: absolute;
      left: 0;
      top: 0;
      background-color: #ffefef;
      border-radius: 15px;
      height: 8px;
      width: 100%;
    }
  }
  .buy-now {
    display: block;
    width: 130px;
    height: 32px;
    border-radius: 2px;
    color: #fff;
    background-color: $col-e53935;
    font-size: 16px;
    line-height: 32px;
    text-align: center;
  }
}












